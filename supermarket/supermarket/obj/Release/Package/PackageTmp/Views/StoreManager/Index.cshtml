@model IEnumerable<supermarket.Models.Item>

@{
    ViewBag.Title = "Index";
}


    @Html.ActionLink("Create Item", "Create", null, new { @class = "btn btn-info" })

    @Html.ActionLink("Show Category", "Index","Categories",null, new { @class = "btn btn-info" })
    @Html.ActionLink("Show Producer", "Index","Producers", null ,new { @class = "btn btn-info" })
    @Html.ActionLink("Recent Sell", "Index","Orders", null ,new { @class = "btn btn-info" })
    @Html.ActionLink("Show Income", "Income",null, new { @class = "btn btn-info" })
<br/><br />
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                Item name
            </th>

              <th>
                Category Name
            </th>
            <th>
               Producer Name
            </th>
            <th >   @Html.DisplayNameFor(model => model.Price)
            </th>
        </tr>
        </thead>
    <tbody id="myTable">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ItemId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ItemId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ItemId })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
