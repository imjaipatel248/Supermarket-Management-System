@model IEnumerable<supermarket.Models.Producer>

@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("Create Producer", "Create", null, new { @class = "btn btn-info" })

@Html.ActionLink("Show Category", "Index", "Categories", null, new { @class = "btn btn-info" })
@Html.ActionLink("Show Item", "Index", "Storemanager", null, new { @class = "btn btn-info" })
@Html.ActionLink("Recent Sell", "Index", "Orders", null, new { @class = "btn btn-info" })
@Html.ActionLink("Show Income", "Income","StoreManager", null, new { @class = "btn btn-info" })
<br /><br />
<table class="table table-striped">
    <thead class="thead-dark">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="myTable">

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProducerId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProducerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProducerId })
                </td>
            </tr>
        }

    </tbody>
</table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
