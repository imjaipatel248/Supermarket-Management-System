@model supermarket.Models.Item
    @{
        ViewBag.Title = "Model - " + Model.Title;
    }
    <h2>@Model.Title</h2>
    <p>
        <img alt="@Model.Title"
             src="@Model.ItemArtUrl" />

    </p>
<style>img {
    position: relative;
    float: left;
    width:  150px;
    height: 150px;
    background-position: 50% 50%;
    background-repeat:   no-repeat;
    background-size:     cover;
}</style>
    <div id="Model-details">
        <p>
            <em>Category:</em>
            @Model.Category.Name
        </p>
        <p>
            <em>Producer:</em>
            @Model.Producer.Name
        </p>
        <p>
            <em>Price:</em>
            @String.Format("{0:F}",
Model.Price)
        </p>
        <p class="button1">
            @Html.ActionLink("Add to cart", "AddToCart",
        "ShoppingCart", new { id = Model.ItemId }, "")
        </p>
    